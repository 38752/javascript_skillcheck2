<div class="header">
  Comment App
</div>

<div class="contents" id="contents_area">
  <%= render partial: 'article', collection: @articles %>
</div>

<div class="form-area">
  <div class="form">
    <%= form_with(model: @article, local: true, id: "new_article") do |f| %>
      <%= f.text_field :text, class: "article_form", id: "article_text" %>
      <div id="char_num">
        0文字
      </div>
      <div class="deletepass">
        <div>削除コード</div>
        <%= f.text_field :deletepass, class: "article_code", id: "article_code", maxlength: "4" %>
      </div>
      <%= f.submit "POST" , id: "submit_btn"%>
    <% end %>
  </div>
</div>